<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ThemDiaDiemActivity">

    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="Cập nhật"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_weight="3"
            android:text="Chọn tỉnh:"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Spinner
            android:layout_weight="7"
            android:id="@+id/spTinhThanhSua"
            android:layout_width="0dp"
            android:layout_height="match_parent"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_weight="3"
            android:text="Tên địa điểm:"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:layout_weight="7"
            android:id="@+id/edtTenDiaDiemSua"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_weight="3"
            android:text="Địa chỉ:"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:layout_weight="7"
            android:id="@+id/edtDiaChiSua"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:gravity="center"
            android:text="Ảnh:"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:src="@drawable/no_images"
            android:layout_weight="6"
            android:id="@+id/imgHinhSua"
            android:layout_width="0dp"
            android:layout_height="200dp" />
        <Button
            android:layout_weight="2"
            android:layout_gravity="center"
            android:id="@+id/btnLayAnhTuDTSua"
            android:text="..."
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_weight="3"
            android:text="Giới thiệu:"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:layout_weight="7"
            android:id="@+id/edtGioiThieuSua"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            android:text="Sửa"
            android:id="@+id/btnSua"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:text="Hủy"
            android:id="@+id/btnHuySua"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>