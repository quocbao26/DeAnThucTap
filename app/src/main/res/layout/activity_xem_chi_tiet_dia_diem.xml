<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >


        <ImageView
            android:id="@+id/imgHinhChiTiet"
            android:src="@drawable/no_images"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <TextView

            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#000"
            android:id="@+id/txtNameChiTiet"
            android:text="Name"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#b7b7b7" />
        <LinearLayout
            android:weightSum="10"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:scaleType="center"
                android:src="@drawable/icon_location"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txtAddressChiTiet"
                android:gravity="center_vertical"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:background="#b7b7b7"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
        <ScrollView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/txtIntroduceChiTiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>
        <View
            android:background="#0008fd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="Bình luận"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/btnLoginGmail"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/icon_gmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtTenMail"
                android:layout_marginLeft="5dp"
                android:layout_width="200dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/btnLogoutGmail"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:src="@drawable/icon_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ListView
            android:id="@+id/lvComment"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"></ListView>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:background="#e57373"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:hint="Nhận xét, bình luận mới..."
                android:id="@+id/txtCmtNew"
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

